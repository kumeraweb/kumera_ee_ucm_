---
import { CONTACT_INFO, getWhatsAppLink } from '../data/config'
---

<div class="fixed bottom-5 inset-x-4 z-50 md:inset-x-auto md:bottom-6 md:right-6">
  <div class="grid gap-3 md:gap-2">
    <a
      href={getWhatsAppLink()}
      target="_blank"
      rel="noopener noreferrer"
      class="flex w-full min-h-[52px] items-center justify-center gap-3 rounded-3xl bg-[#1937e2] px-5 text-sm md:text-base font-black text-white shadow-2xl shadow-green-900/30 transition-transform hover:-translate-y-0.5 md:w-64"
      aria-label="Contactar por WhatsApp"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 32 32"
        class="h-6 w-6"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          d="M19.11 17.26c-.3-.15-1.78-.88-2.05-.98-.28-.1-.48-.15-.68.15s-.78.98-.96 1.18-.35.22-.65.07c-.3-.15-1.26-.46-2.4-1.47-.88-.78-1.47-1.75-1.64-2.05-.17-.3-.02-.46.13-.61.13-.13.3-.35.46-.52.15-.17.2-.3.3-.5.1-.2.05-.37-.02-.52-.07-.15-.68-1.63-.94-2.23-.25-.6-.5-.52-.68-.53h-.58c-.2 0-.52.07-.8.35s-1.05 1.03-1.05 2.52 1.08 2.93 1.23 3.13c.15.2 2.12 3.24 5.13 4.55.72.31 1.28.5 1.72.64.72.23 1.38.2 1.9.12.58-.09 1.78-.72 2.03-1.42.25-.7.25-1.3.17-1.42-.07-.12-.27-.2-.57-.35z"
        ></path>
        <path
          d="M16 3C8.83 3 3 8.83 3 16c0 2.54.73 5.02 2.1 7.17L3 29l5.99-2.06A13 13 0 0 0 29 16C29 8.83 23.17 3 16 3zm0 23.8c-2.05 0-4.07-.55-5.83-1.6l-.42-.25-3.55 1.22 1.2-3.45-.27-.44A10.8 10.8 0 1 1 26.8 16 10.82 10.82 0 0 1 16 26.8z"
        ></path>
      </svg>
      WhatsApp directo
    </a>

    <a
      href={`tel:${CONTACT_INFO.phone}`}
      class="flex w-full min-h-[52px] items-center justify-center gap-3 rounded-3xl bg-red-600 px-5 text-sm md:text-base font-black text-white shadow-2xl shadow-red-900/30 transition-transform hover:-translate-y-0.5 md:w-64"
      aria-label="Llamar ahora"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
        ></path>
      </svg>
      Llamar ahora
    </a>
  </div>
</div>
