---
import { CONTACT_INFO, getWhatsAppLink } from '../data/config'
---

<div
  class="fixed bottom-4 inset-x-4 z-50 md:inset-auto md:right-6 md:bottom-6"
>
  <div
    class="rounded-2xl border border-slate-200 bg-white/95 shadow-lg backdrop-blur px-2 py-2 md:px-3"
  >
    <div class="grid grid-cols-2 gap-2 md:flex md:gap-3">
      <a
        href={getWhatsAppLink()}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary w-full md:w-auto"
        aria-label="Cotiza aquí"
      >
        Cotiza aquí
      </a>
      <a
        href={`tel:${CONTACT_INFO.phone}`}
        class="btn btn-secondary w-full md:w-auto"
        aria-label="Contrata aquí"
      >
        Contrata aquí
      </a>
    </div>
  </div>
</div>
