---
import { CONTACT_INFO } from '../data/config'
---

<header class="sticky top-0 z-50 border-b border-slate-200/70 bg-white/90 backdrop-blur">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex flex-col justify-center">
      <span class="text-slate-900 font-black text-base md:text-xl leading-none tracking-tight">
        PLANES DE RESCATE
      </span>
      <span class="text-slate-500 text-[10px] md:text-xs font-semibold uppercase tracking-widest">
        {CONTACT_INFO.roleLabel}
      </span>
    </div>

    <a
      href={`tel:${CONTACT_INFO.phone}`}
      class="btn btn-secondary text-xs md:text-sm px-4 py-2"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 md:h-5 md:w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
        ></path>
      </svg>
      Contacto comercial
      <span class="sr-only">
        {CONTACT_INFO.phoneDisplay ?? `+${CONTACT_INFO.phone}`}
      </span>
    </a>
  </div>
</header>
