---
import { CONTACT_INFO } from '../data/config'
---

<header class="sticky top-0 z-50 bg-blue-900 shadow-lg border-b border-blue-950/60">
  <div class="max-w-7xl mx-auto px-4 h-20 flex items-center justify-between">
    <div class="flex flex-col justify-center">
      <span class="text-white font-black text-lg md:text-2xl leading-none tracking-tight">
        Ejecutiva Autorizada
      </span>
      <span class="text-blue-100 text-xs font-bold uppercase tracking-widest">
        {CONTACT_INFO.title}
      </span>
    </div>

    <a
      href={`tel:${CONTACT_INFO.phone}`}
      class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 md:px-6 md:py-3 rounded-full flex items-center gap-2 transition-transform hover:scale-105 shadow-xl"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 md:h-6 md:w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
        ></path>
      </svg>
      <span class="font-bold text-sm md:text-lg">Llamar Ahora</span>
      <span class="sr-only">
        {CONTACT_INFO.phoneDisplay ?? `+${CONTACT_INFO.phone}`}
      </span>
    </a>
  </div>
</header>
