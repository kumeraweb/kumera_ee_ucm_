---
import '../styles/global.css'
import { CONTACT_INFO } from '../data/config'

interface Props {
  title: string
}

const { title } = Astro.props

const schemaData = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: 'Erika - Asesoría en Planes de Rescate Médico',
  image: '/ejecutiva.png',
  description:
    'Ejecutiva comercial independiente y autorizada para la venta, cotización y asesoría de planes de rescate médico móvil y ambulancias privadas en Chile. Intermediación de servicios para familias y empresas.',
  telephone: `+${CONTACT_INFO.phone}`,
  priceRange: '$$',
  areaServed: {
    '@type': 'Country',
    name: 'Chile'
  },
  makesOffer: {
    '@type': 'Offer',
    itemOffered: {
      '@type': 'Service',
      name: 'Gestión y Contratación de Planes de Salud'
    }
  },
  provider: {
    '@type': 'Person',
    name: CONTACT_INFO.name,
    jobTitle: 'Ejecutiva de Ventas Autorizada'
  }
}
---

<!doctype html>
<html lang="es-CL" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      name="description"
      content="Asesoría experta e independiente en planes de rescate médico. Cotiza con Erika tu plan de ambulancia privada. Gestión rápida y autorizada."
    />

    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap"
      rel="stylesheet"
    />

    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=AW-17899206383"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'AW-17899206383')
    </script>
  </head>
  <body class="bg-slate-50 text-slate-900 font-['Lato',_sans-serif]">
    <slot />

    <footer class="bg-slate-900 text-white py-12 px-4 mt-20 text-center">
      <div class="max-w-4xl mx-auto">
        <p class="text-slate-400 text-sm mb-4 leading-relaxed">
          <strong>Aviso Legal:</strong> Este sitio web pertenece a una
          <span class="text-white font-bold">Ejecutiva de Ventas Independiente</span> ({
            CONTACT_INFO.name
          }). La gestión de los servicios médicos y ambulancias es responsabilidad exclusiva de las
          empresas proveedoras contratadas. No somos una central de urgencias médicas directa.
        </p>
        <p class="text-slate-500 text-xs">
          © {new Date().getFullYear()} Servicios de Rescate Móvil - Gestión Comercial.
        </p>
      </div>
    </footer>
  </body>
</html>
