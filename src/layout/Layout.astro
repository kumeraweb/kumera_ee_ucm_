---
import '../styles/global.css'
import { CONTACT_INFO } from '../data/config'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es-CL" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="description"
      content="Asesoría experta en planes de rescate médico. Cotiza con Erika tu plan de ambulancia privada."
    />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap"
      rel="stylesheet"
    />

    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=AW-17899206383"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'AW-17899206383')
    </script>
  </head>
  <body class="bg-slate-50 text-slate-900 font-['Lato',_sans-serif]">
    <slot />

    <footer class="bg-slate-900 text-white py-12 px-4 mt-20 text-center">
      <div class="max-w-4xl mx-auto">
        <p class="text-slate-400 text-sm mb-4">
          <strong>Aviso Legal:</strong> Sitio web de asesoría independiente gestionado por {
            CONTACT_INFO.name
          }, {CONTACT_INFO.title}. No somos la central de urgencias de la clínica.
        </p>
        <p class="text-slate-500 text-xs">
          © {new Date().getFullYear()} Servicios de Rescate Móvil.
        </p>
      </div>
    </footer>
  </body>
</html>
