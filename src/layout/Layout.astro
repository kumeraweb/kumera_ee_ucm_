---
import '../styles/global.css'
import { CONTACT_INFO } from '../data/config'
import StickyActions from '../components/StickyActions.astro'

interface Props {
  title: string
}

Astro.props satisfies Props
const pageTitle = 'Gestion Autorizada de Planes | Asesoría Comercial'

const schemaData = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: 'Gestion Autorizada de Planes',
  description: 'Asesoría comercial para contratar planes. Información clara de condiciones y cobertura según proveedor externo.',
  areaServed: {
    '@type': 'Country',
    name: CONTACT_INFO.areaServed
  },
  priceRange: CONTACT_INFO.priceRange,
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'sales',
    telephone: `+${CONTACT_INFO.phone}`
  }
}
---

<!doctype html>
<html lang="es-CL" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      name="description"
      content="Asesoría comercial para contratar planes de asistencia y rescate médico privado. Información clara de condiciones según proveedores externos."
    />

    <title>{pageTitle}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap"
      rel="stylesheet"
    />

    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=AW-17899206383"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'AW-17899206383')
    </script>
  </head>
  <body class="bg-slate-50 text-slate-900 font-['Lato',_sans-serif] overflow-x-hidden pb-24 md:pb-0">
    <slot />
    <StickyActions />

    <footer class="bg-slate-900 text-white py-12 px-4 mt-20 text-center">
      <div class="max-w-4xl mx-auto">
        <p class="text-slate-300 text-sm mb-4 leading-relaxed">
          <strong>Aviso Legal:</strong> {CONTACT_INFO.legalDisclaimerLong}
        </p>
        <p class="text-slate-500 text-xs">
          © {new Date().getFullYear()} {CONTACT_INFO.brandTitle} - Asesoría Comercial.
        </p>
      </div>
    </footer>
  </body>
</html>
